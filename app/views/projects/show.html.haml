- title(@project.name, "Projects")
%header
  %h1= @project.name
  %ul.actions
    %li= link_to "Edit Project", edit_project_path(@project), class: "btn btn-primary"
    %li= link_to "Delete Project", project_path(@project),
    method: :delete, data: { confirm: "Are you sure you want to delete this project?" }, class: "btn btn-danger"
%p= @project.description
